@model IEnumerable<SingleFlightModel>

<div class="modal fade" id="Modal-Booking" tabindex="-1" data-backdrop="static" data-keyboard="false"
     role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document"></div>
</div>

<div class="page-title-container">
    <div class="container">
        <div class="page-title pull-left">
            <h2 class="entry-title">La liste des vols réservés</h2>
        </div>

        <ul class="breadcrumbs pull-right">
            <li><a asp-controller="Flights" asp-action="Index">Accueil</a></li>
            <li class="active">Mes réservations</li>
        </ul>
    </div>
</div>

<div class="container">
    <div id="main">
        <div class="row">
            <div class="col-sm-4 col-md-3">
                <!-- Side bar -->
                <div class="toggle-container filters-container">
                    <div class="panel-sidebar text-center"></div>
                </div>
            </div>

            <div class="col-sm-8 col-md-9">
                <div class="row flight-list image-box flight listing-style1">
                    <!-- Reserved flight  -->
                    <partial name="Partials/_ReservedFlightItem" model="@Model" />
                    <!-- End reserved flight -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/booked-flights-async-requests.js"></script>
}